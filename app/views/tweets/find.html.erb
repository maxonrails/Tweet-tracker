<div class="wrapper">

  <h2>Search results:</h2>

  <% @results.each do |tweet| %>
    <p>
      <a href="https://twitter/<%= tweet[:handle] %>"><%= tweet[:handle] %></a>:
      <%= tweet[:content].html_safe %><br/>

    <form action='/tweets' method='post'>
      <%= token_tag %>
      <input type='hidden' name='handle' value="<%= tweet[:handle] %>">
      <input type='hidden' name='content' value="<%= tweet[:content] %>">
      <button>Save tweet</button>
    </form>
    </p>
  <% end %>
</div>
